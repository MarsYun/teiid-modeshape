//------------------------------------------------------------------------------

<dv = "http://www.metamatrix.com/metamodels/DataVirtualization/1.0">
<nt  = "http://www.jcp.org/jcr/nt/1.0">
<vdb = "http://www.metamatrix.com/metamodels/VirtualDatabase">

/*
 * DataVirtualization DataService
 */
[dv:dataService] > nt:unstructured, mix:referenceable
  - dv:serviceVdb (reference) multiple // reference to vdb:virtualDatabase // Paul: include service VDBs in VDB collection
  - dv:vdbs (reference) multiple // references to dv:dataServiceVdb
  - dv:dataSources (reference) multiple // reference to a dv:dataSource
  - dv:drivers (reference) multiple // references to dv:driver
  
[dv:dataServiceVdb] > nt:unstructured, mix:referenceable // Paul: not needed
  - dv:vdb (reference) // reference to a vdb:virtualDatabase
  - dv:dataSource (reference) // reference to a dv:dataSource

/*
 * DataVirtualization DataSource
 */
[dv:dataSource] > nt:unstructured, mix:referenceable
  - dv:type (string) < 'JDBC','RESOURCE'
  - dv:jndiName (string)
  - dv:className (string)
  - dv:driverName (string)
  - dv:drivers (reference) multiple // references to dv:driver
  
/*
 * DataVirtualization Driver
 */
[dv:driver] > nt:file, mix:referenceable
 